extends base



block content
  main.main
    .signup-form
      h2.heading-secondary.ma-bt-lg Sign up and join to our family!
      form.form
        .form__group
          label.form__label(for='name') Name
          input#name.form__input(type='text', placeholder='Alexey', required)
        .form__group
          label.form__label(for='email') Email address
          input#email.form__input(type='email', placeholder='you@example.com', required)
        .form__group.ma-bt-md
          label.form__label(for='password') Password
          input#password.form__input(type='password', placeholder='••••••••', required, minlength='8', autocomplete="on")
        .form__group.ma-bt-md 
            label.form__label(for='confirmPassword') Confirm password
            input#confirmPassword.form__input(type='password', placeholder='••••••••', required, minlength='8', autocomplete="on")

        .form__group
          button.btn.btn--green Sign Up